<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">




    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_alignParentStart="false"
        android:id="@+id/layout"
        android:layout_height="wrap_content">

        <TextView
            android:text="12:00"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/anotation"
            android:layout_alignParentStart="true"
            android:id="@+id/dateAtricle"
            android:textStyle="normal|italic"
            android:layout_marginStart="5dp"
            android:layout_marginTop="10dp" />

        <TextView
            android:text="anotation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/anotation"
            android:layout_alignBottom="@+id/textArticle"
            android:layout_alignParentStart="true"
            android:textStyle="normal|bold"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp" />
    </LinearLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/layout"
        >
        <TextView
            android:text="очень длинный текст"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:id="@+id/textArticle"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_marginStart="10dp"
            android:layout_margin="10dp" />
    </ScrollView>
</RelativeLayout>